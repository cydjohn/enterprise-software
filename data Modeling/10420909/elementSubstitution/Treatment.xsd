<?xml version="1.0" encoding="UTF-8"?>
<xs:schema targetNamespace="http://www.example.org/schemas/clinic/treatment"
    xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
    xmlns:tns="http://www.example.org/schemas/clinic/treatment"
    xmlns:cids="http://www.example.org/schemas/clinc/clinc_ids">
    <xs:import namespace="http://www.example.org/schemas/clinc/clinc_ids"
        schemaLocation="ClinicIds.xsd"/>
    <xs:complexType name="TreatmentType">
        <xs:sequence>
            <xs:element name="provider_id" type="cids:ProviderIdType"/>
            <xs:element name="diagnosis" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="DrugTreatmentType">
        <xs:complexContent>
            <xs:extension base="tns:TreatmentType">
                <xs:sequence>
                    <xs:element name="dosage" type="xs:float"/>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    <xs:complexType name="SugeryTyoe">
        <xs:complexContent>
            <xs:extension base="tns:TreatmentType">
                <xs:sequence>
                    <xs:element name="date" type="xs:date"/>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    <xs:complexType name="RadiologyType">
        <xs:complexContent>
            <xs:extension base="tns:TreatmentType">
                <xs:sequence>
                    <xs:element maxOccurs="unbounded" minOccurs="1" name="date" type="xs:date"/>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    
    <xs:element name="Treatment" type="tns:TreatmentType" abstract="true"/>
    <xs:element name="DrugTreatment" substitutionGroup="tns:Treatment" type="tns:DrugTreatmentType"/>
    <xs:element name="SugeryTreatment" substitutionGroup="tns:Treatment" type="tns:SugeryTyoe"/>
    <xs:element name="RadiologyTreatment" substitutionGroup="tns:Treatment" type="tns:RadiologyType"/>
    
</xs:schema>